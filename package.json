{
  "scripts": {
    "lint": "eslint .eslintrc.js ./packages/*/src ./packages/*/test",
    "lint-fix": "eslint .eslintrc.js --fix ./packages/*/src ./packages/*/test",
    "test": "lerna bootstrap && lerna exec -- _mocha --recursive --opts test/mocha.opts",
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "eslint": "latest",
    "eslint-config-airbnb": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsx-a11y": "latest",
    "eslint-plugin-react": "latest",
    "lerna": "^2.5.1",
    "mocha": "^3.2.0"
  }
}
